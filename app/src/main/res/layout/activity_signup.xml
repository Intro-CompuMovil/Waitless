<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imagenParque"
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:scaleType="centerCrop"
        android:src="@drawable/parquediversiones" />

    <View
        android:id="@+id/fondoRojo"
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:background="@color/lightRed" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:srcCompat="@drawable/logowaitless" />

    <View
        android:id="@+id/fondoGris"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_below="@id/fondoRojo"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:background="@color/Grey" />

    <View
        android:id="@+id/cajaBlanca"
        android:layout_width="292dp"
        android:layout_height="525dp"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:background="@color/white" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Correo"
        />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Apellido"
        android:layout_above="@+id/correo"
        />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre"
        android:layout_above="@+id/apellido"
        />

    <TextView
        android:id="@+id/registroApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/registro"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_above="@id/blanco"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/blanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= " "
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:layout_above="@id/nombre"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/nombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:hint="NombreUsuario"
        android:layout_below="@+id/correo"
        />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Contraseña"
        android:layout_below="@+id/nombreUsuario"
        />

    <EditText
        android:id="@+id/confContraseña"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:hint="Confirmación Contraseña"
        android:layout_below="@+id/contraseña"
        />

    <ImageView
        android:id="@+id/imagenAuten"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/confContraseña"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/recaptcha" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenAuten"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up"
        android:backgroundTint="@color/red" />

</RelativeLayout>